{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    
    // 型安全性を向上させる追加設定
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false, // 段階的導入（将来的にtrueに変更）
    "exactOptionalPropertyTypes": false, // 段階的導入（将来的にtrueに変更）
    "noPropertyAccessFromIndexSignature": false // 段階的導入（将来的にtrueに変更）
  },
  "include": ["src"]
} 